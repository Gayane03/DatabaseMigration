@inherits LayoutComponentBase
@inject NavigationManager Navigation

<style>
    .layout-container {
        display: flex;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Modern font */
    }

    .sidebar {
        width: 240px; /* Slightly wider sidebar */
        background-color: #41224e; /* Darker, professional sidebar */
        color: #e9ecef; /* Light text on dark background */
        padding: 20px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2); /* Subtle shadow */
    }

        .sidebar h2 {
            margin-bottom: 20px;
            color: #007bff; /* Primary color for emphasis */
            font-weight: 600;
        }

    .content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        padding-top: 0;
    }

    .header {
        margin-top: 0; /* Remove top margin for cleaner look */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 15vh; /* Reduce header height */
        background: linear-gradient(135deg, #ffd400, #6610f2); /* Gradient background */
        color: white;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); /* Add text shadow */
    }

        .header h1 {
            font-size: 2.5em; /* Larger header text */
            font-weight: 700;
            letter-spacing: 1px;
        }

    .footer {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 5vh; /* Adjust footer height */
        background-color: #41224e; /* Match sidebar background */
        color: #e9ecef;
        font-size: 0.9em;
    }

    .content-body {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background-color: #f8f9fa; /* Light background for content */
    }

    .mud-card {
        width: 100%; /* Adjust card width */
        max-width: 1200px; /* Max width for large screens */
      /*   padding: 30px; */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
        border-radius: 8px; /* Rounded corners */
        height: 100%;
    }

    .mud-card-content {
        width: 100%;
    }

    .sidebar .nav-link {
        display: block;
        padding: 10px 15px;
        color: #e9ecef;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar .nav-link.active {
            background-color: #007bff;
            color: white;
        }
</style>

<div class="layout-container">
    <div class="sidebar">
      
        <NavMenuMigration />
    </div>

    <div class="content">
        <header>
            <div class="header">
                <h1>DATABASE MIGRATION</h1>
            </div>
        </header>

        <div class="content-body">
            <MudCard Class="mud-card">
                <MudCardContent Class="mud-card-content">
                    @Body
                </MudCardContent>
            </MudCard>
        </div>

        <div class="footer">
            <footer>
                <p style="margin: 0">© @DateTime.Now.Year</p>
            </footer>
        </div>
    </div>
</div>